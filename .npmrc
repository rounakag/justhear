# Optimize npm for faster installations
cache=.npm-cache
prefer-offline=true
audit=false
fund=false
loglevel=error
progress=false
silent=true

# Use faster registry
registry=https://registry.npmjs.org/

# Optimize for CI/CD
save-exact=false
save-prefix="^"

# Performance optimizations
maxsockets=50
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Disable unnecessary features
update-notifier=false
